<!DOCTYPE html>
<html>
  <head>
    <title>TestGuru</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if user_signed_in? %>
      <p class="nav user">Welcome, <%= current_user.email %> Guru | <%= link_to 'Log out', destroy_user_session_path, method: :delete %></p>
    <% else %>
      <p class="nav user"><%= link_to 'Login', new_user_session_path %> | <%= link_to 'Signup', new_user_registration_path %></p>
    <% end %>

    <%= render 'shared/flash' %>

    <%= yield %>

    <%= render 'layouts/footer' %>
  </body>
</html>
