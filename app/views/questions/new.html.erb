<h1> Create Question</h1>

<form action ='/tests/<%= @test.id %>/questions' method="post">
  <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
  <input name="question[test_id]" value="<%= @test.id %>" type="hidden">
  <p>
    <label for="question-body"> Input your question:</label>
    <input type="text" name="question[body]" id="question-body">
  </p><br>

  <input type="submit" value="Create">

</form> 
